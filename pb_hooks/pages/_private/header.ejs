<header class="navbar fixed inset-x-0 top-0 z-50 border-b border-base-300 bg-base-100/80 shadow-sm backdrop-blur-md">
    <div class="mx-auto flex w-full max-w-7xl items-center justify-between px-6 py-5">
        <!-- Logo - visible on all screens -->
        <a href="/" class="flex items-center gap-3 transition-opacity hover:opacity-80">
            <div class="select-none leading-tight">
                <p class="text-2xl font-bold text-base-content lg:text-3xl">
                    Dank Movies
                </p>
            </div>
        </a>

        <div class="hidden items-center gap-8 md:flex lg:gap-10">
            <template x-for="item in navigation" :key="item.title">
                <a :href="item.href"
                    class="group relative text-sm font-medium tracking-wide text-base-content/80 transition-colors duration-200 hover:text-primary"
                    x-text="item.title">
                    <span
                        class="absolute -bottom-1 left-0 h-0.5 w-0 bg-primary transition-all duration-300 group-hover:w-full"></span>
                </a>
            </template>

            <div class="h-6 w-px bg-base-content/10"></div>

            <%- include('theme-toggle') %>

                <% if (locals.auth) { %>
                    <div class="dropdown dropdown-end" x-data="{ open: false }" :class="{ 'dropdown-open': open }"
                        @click.outside="open = false">
                        <div role="button" class="btn btn-ghost btn-circle avatar"
                            @click="open = !open; if(!open) $el.blur()">
                            <div class="w-10 rounded-full ring ring-primary ring-offset-base-100 ring-offset-2">
                                <%# Check if avatarUrl exists, otherwise use UI Avatars %>
                                    <% if (auth.avatar) { %>
                                        <img src="<%= '/api/files/' + auth.collectionId + '/' + auth.id + '/' + auth.avatar %>"
                                            alt="User Avatar" />
                                        <% } else { %>
                                            <span
                                                class="text-xl font-bold flex h-full w-full items-center justify-center">
                                                <%= auth.email().slice(0, 1).toUpperCase() %>
                                            </span>
                                            <% } %>
                            </div>
                        </div>
                        <ul tabindex="0"
                            class="menu dropdown-content menu-sm z-[1] mt-3 w-52 rounded-box bg-base-100 p-2 shadow">
                            <li class="menu-title px-4 py-2 text-xs text-base-content/50">
                                <%= auth.email() %>
                            </li>
                            <li><a href="/profile">Profile</a></li>
                            <li><a href="/auth/logout">Logout</a></li>
                        </ul>
                    </div>
                    <% } else { %>
                        <a href="/login" class="btn btn-primary btn-sm">Login</a>
                        <% } %>
        </div>

        <!-- Mobile Menu Buttons -->
        <div class="flex items-center gap-2 md:hidden">
            <%- include('theme-toggle') %>

                <!-- Hamburger Menu Button -->
                <button class="btn btn-square btn-ghost text-base-content" @click="navOpen = !navOpen"
                    aria-label="Toggle menu">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2"
                        stroke="currentColor" class="h-6 w-6">
                        <path stroke-linecap="round" stroke-linejoin="round"
                            d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                    </svg>
                </button>
        </div>
    </div>
</header>