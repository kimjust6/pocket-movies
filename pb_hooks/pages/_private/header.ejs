<header
    class="navbar fixed inset-x-0 top-0 z-50 border-b border-base-300 bg-base-100/80 shadow-sm backdrop-blur-md"
>
    <div
        class="mx-auto flex w-full max-w-7xl items-center justify-between px-6 py-5"
    >
        <!-- Logo - visible on all screens -->
        <a
            href="/"
            class="flex items-center gap-3 transition-opacity hover:opacity-80"
        >
            <div class="select-none leading-tight">
                <p class="text-2xl font-bold text-base-content lg:text-3xl">
                    Dank Movies
                </p>
            </div>
        </a>

        <!-- Desktop Navigation -->
        <div class="hidden items-center gap-6 md:flex lg:gap-10 xl:gap-12">
            <template x-for="item in navigation" :key="item.title">
                <a
                    :href="item.href"
                    class="group relative text-sm font-semibold text-base-content/70 transition-all duration-200 hover:scale-105 hover:text-base-content lg:text-base xl:text-lg"
                    x-text="item.title"
                >
                    <span
                        class="absolute bottom-0 left-0 h-0.5 w-0 bg-primary transition-all duration-200 group-hover:w-full"
                    ></span>
                </a>
            </template>

            <%- include('theme-toggle') %>
        </div>

        <!-- Mobile Menu Buttons -->
        <div class="flex items-center gap-2 md:hidden">
            <%- include('theme-toggle') %>

            <!-- Hamburger Menu Button -->
            <button
                class="btn btn-square btn-ghost text-base-content"
                @click="navOpen = !navOpen"
                aria-label="Toggle menu"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="2"
                    stroke="currentColor"
                    class="h-6 w-6"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
                    />
                </svg>
            </button>
        </div>
    </div>
</header>
