<header class="navbar fixed inset-x-0 top-0 z-50 border-b border-base-300 bg-base-100/80 backdrop-blur-md shadow-sm">
    <div class="mx-auto flex w-full max-w-7xl items-center justify-between px-6 py-5">
        <!-- Logo - visible on all screens -->
        <a href="/" class="flex items-center gap-3 transition-opacity hover:opacity-80">
            <div class="leading-tight select-none">
                <p class="font-bold text-2xl lg:text-3xl text-base-content">
                    My Project
                </p>
            </div>
        </a>

        <!-- Desktop Navigation -->
        <div class="hidden items-center gap-6 lg:gap-10 xl:gap-12 md:flex">
            <template x-for="item in navigation" :key="item.title">
                <a :href="item.href"
                    class="text-sm lg:text-base xl:text-lg font-semibold text-base-content/70 transition-all duration-200 hover:text-base-content hover:scale-105 relative group"
                    x-text="item.title">
                    <span
                        class="absolute bottom-0 left-0 w-0 h-0.5 bg-primary transition-all duration-200 group-hover:w-full"></span>
                </a>
            </template>

            <%- include('theme-toggle') %>
        </div>

        <!-- Mobile Menu Buttons -->
        <div class="flex items-center gap-2 md:hidden">
            <%- include('theme-toggle') %>

                <!-- Hamburger Menu Button -->
                <button class="btn btn-ghost btn-square text-base-content" @click="navOpen = !navOpen"
                    aria-label="Toggle menu">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2"
                        stroke="currentColor" class="h-6 w-6">
                        <path stroke-linecap="round" stroke-linejoin="round"
                            d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                    </svg>
                </button>
        </div>
    </div>
</header>