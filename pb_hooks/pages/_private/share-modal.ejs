<!-- Share Modal -->
<div x-show="showShareModal" x-cloak x-transition:enter="transition ease-out duration-200"
    x-transition:enter-start="opacity-0" x-transition:enter-end="opacity-100"
    x-transition:leave="transition ease-in duration-150" x-transition:leave-start="opacity-100"
    x-transition:leave-end="opacity-0"
    class="fixed inset-0 z-50 flex items-center justify-center bg-black/70 backdrop-blur-md"
    @click.self="showShareModal = false" @keydown.escape.window="showShareModal = false">

    <div x-show="showShareModal" x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="opacity-0 scale-90 translate-y-4"
        x-transition:enter-end="opacity-100 scale-100 translate-y-0"
        x-transition:leave="transition ease-in duration-200" x-transition:leave-start="opacity-100 scale-100"
        x-transition:leave-end="opacity-0 scale-95"
        class="relative w-full max-w-2xl rounded-3xl border border-white/10 bg-gradient-to-br from-base-200 via-base-200 to-base-300 p-8 shadow-2xl">

        <!-- Close Button -->
        <button @click="showShareModal = false"
            class="btn btn-circle btn-ghost btn-sm absolute right-4 top-4 opacity-60 hover:opacity-100 hover:rotate-90 transition-all duration-300">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
        </button>

        <!-- Header -->
        <div class="flex items-center gap-4 mb-6">
            <div
                class="flex items-center justify-center w-12 h-12 rounded-2xl bg-gradient-to-br from-secondary/20 to-primary/20 border border-white/10">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-secondary" viewBox="0 0 20 20"
                    fill="currentColor">
                    <path
                        d="M15 8a3 3 0 10-2.977-2.63l-4.94 2.47a3 3 0 100 4.319l4.94 2.47a3 3 0 10.895-1.789l-4.94-2.47a3.027 3.027 0 000-.74l4.94-2.47C13.456 7.68 14.19 8 15 8z" />
                </svg>
            </div>
            <div>
                <h3
                    class="text-2xl font-bold bg-gradient-to-r from-white via-white to-white/50 bg-clip-text text-transparent">
                    Share Watchlist
                </h3>
                <p class="text-base-content/50 text-sm">Manage who can access this list</p>
            </div>
        </div>

        <!-- Column Headers -->
        <div
            class="flex items-center justify-between px-4 py-2 mb-2 text-xs font-semibold uppercase tracking-wider text-base-content/40">
            <span>User</span>
            <span>Access Level</span>
        </div>

        <!-- User List -->
        <div
            class="max-h-[55vh] overflow-y-auto pr-1 space-y-3 scrollbar-thin scrollbar-thumb-base-content/10 scrollbar-track-transparent">
            <% if (users && users.length> 0) { %>
                <% users.forEach(u=> { %>
                    <div
                        class="flex items-center justify-between p-4 bg-gradient-to-r from-base-100/80 to-base-100/40 rounded-2xl border border-white/5 hover:border-white/10 hover:shadow-lg hover:shadow-black/10 transition-all duration-300 group">
                        <div class="flex items-center gap-4">
                            <div class="avatar placeholder">
                                <div
                                    class="<%= u.is_invited ? 'bg-gradient-to-br from-secondary to-primary' : 'bg-neutral' %> text-white rounded-full w-11 h-11 ring-2 ring-white/10 group-hover:ring-white/20 transition-all duration-300 shadow-md">
                                    <span class="text-sm font-bold">
                                        <%= u.email.substring(0, 2).toUpperCase() %>
                                    </span>
                                </div>
                            </div>
                            <div class="flex flex-col">
                                <span
                                    class="font-medium text-base-content group-hover:text-white transition-colors duration-300">
                                    <%= u.email %>
                                </span>
                                <% if (u.is_invited) { %>
                                    <div class="flex items-center gap-1.5 mt-0.5">
                                        <div class="w-1.5 h-1.5 rounded-full bg-success animate-pulse"></div>
                                        <span class="text-[11px] text-success font-medium">Active Member</span>
                                    </div>
                                    <% } else { %>
                                        <span class="text-[11px] text-base-content/40">Not invited yet</span>
                                        <% } %>
                            </div>
                        </div>

                        <div class="flex items-center gap-3">
                            <form method="POST" class="flex items-center gap-3"
                                onsubmit="if(this.permission.value === 'remove') return confirm('Are you sure you want to remove this user?');">
                                <input type="hidden" name="action" value="invite_user">
                                <input type="hidden" name="user_id" value="<%= u.id %>">
                                <input type="hidden" name="list_id" value="<%= listId %>">

                                <select name="permission"
                                    class="select select-sm w-28 bg-base-300 border-white/10 focus:border-primary focus:outline-none text-sm font-medium"
                                    onchange="if(this.value==='remove') { this.classList.add('text-error', 'border-error/50'); } else { this.classList.remove('text-error', 'border-error/50'); }">
                                    <option value="view" <%=(u.is_invited && u.current_permission==='view' )
                                        ? 'selected' : '' %>>View</option>
                                    <option value="edit" <%=(u.is_invited && u.current_permission==='edit' )
                                        ? 'selected' : '' %>>Edit</option>
                                    <% if (u.is_invited) { %>
                                        <option value="remove" class="text-error">Remove</option>
                                        <% } %>
                                </select>

                                <% if (u.is_invited) { %>
                                    <button type="submit"
                                        class="btn btn-sm btn-ghost text-primary hover:bg-primary hover:text-primary-content font-semibold transition-all duration-300">
                                        Update
                                    </button>
                                    <% } else { %>
                                        <button type="submit"
                                            class="btn btn-sm btn-secondary shadow-lg shadow-secondary/30 hover:shadow-secondary/50 hover:scale-105 font-semibold transition-all duration-300">
                                            Invite
                                        </button>
                                        <% } %>
                            </form>
                        </div>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <div class="text-center py-12">
                                <div
                                    class="w-16 h-16 mx-auto mb-4 rounded-full bg-base-300 flex items-center justify-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-base-content/30"
                                        fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                                    </svg>
                                </div>
                                <p class="text-base-content/40 font-medium">No other users available</p>
                                <p class="text-base-content/30 text-sm mt-1">Invite users by creating accounts first</p>
                            </div>
                            <% } %>
        </div>

        <!-- Footer -->
        <div class="mt-8 pt-6 border-t border-white/5">
            <button type="button" @click="showShareModal = false"
                class="btn btn-ghost w-full border border-white/10 hover:border-white/20 hover:bg-white/5 font-medium">
                Done
            </button>
        </div>
    </div>
</div>