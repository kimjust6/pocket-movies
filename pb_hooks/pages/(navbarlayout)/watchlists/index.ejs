<div class="container mx-auto p-6" x-data="{ query: '', showNewWatchlistModal: false, newWatchlistName: '' }">
    <div class="mb-6 flex items-center justify-between">
        <div>
            <h1
                class="text-3xl font-bold bg-gradient-to-br from-white to-white/60 bg-clip-text text-transparent drop-shadow-sm">
                Watchlist</h1>
            <p class="text-base-content/60 mt-1">Manage movies you want to watch</p>
        </div>
        <div class="flex gap-3">
            <button @click="showNewWatchlistModal = true"
                class="btn btn-secondary gap-2 shadow-lg shadow-secondary/20 hover:scale-105 hover:shadow-secondary/40 transition-all duration-300">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M2 6a2 2 0 012-2h5l2 2h5a2 2 0 012 2v6a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" />
                    <path stroke="currentColor" stroke-linecap="round" stroke-width="2" d="M10 9v4m2-2H8" fill="none" />
                </svg>
                New Watchlist
            </button>
            <a href="/movies/search"
                class="btn btn-primary gap-2 shadow-lg shadow-primary/20 hover:scale-105 hover:shadow-primary/40 transition-all duration-300">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd"
                        d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z"
                        clip-rule="evenodd" />
                </svg>
                Add Movie
            </a>
        </div>
    </div>

    <% if (data.lists && data.lists.length> 0) { %>
        <div class="mb-12 animate-fade-in-up">
            <h2 class="text-xl font-semibold text-white/90 mb-6 flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-secondary" fill="none" viewBox="0 0 24 24"
                    stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                </svg>
                Your Custom Lists
            </h2>
            <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
                <% data.lists.forEach(list=> { %>
                    <a href="/watchlists/<%= list.id %>"
                        class="group card border border-base-content/5 bg-base-100/40 shadow-lg backdrop-blur-sm transition-all duration-300 hover:-translate-y-2 hover:shadow-secondary/20 hover:border-secondary/30">
                        <div class="card-body p-6">
                            <div class="flex items-start justify-between mb-2">
                                <div
                                    class="p-3 bg-secondary/10 rounded-xl text-secondary group-hover:bg-secondary group-hover:text-secondary-content transition-colors">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none"
                                        viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z" />
                                    </svg>
                                </div>
                                <div class="badge badge-ghost badge-sm opacity-60">
                                    <%= new Date(list.created).toLocaleDateString() %>
                                </div>
                            </div>
                            <h3
                                class="card-title text-lg font-bold text-base-content group-hover:text-secondary transition-colors line-clamp-1">
                                <%= list.list_title %>
                            </h3>
                            <p class="text-sm text-base-content/60 mt-1">View collection &rarr;</p>
                        </div>
                    </a>
                    <% }) %>
            </div>

            <div class="divider my-10 opacity-50"></div>

            <h2 class="text-xl font-semibold text-white/90 mb-6 flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" viewBox="0 0 20 20"
                    fill="currentColor">
                    <path d="M4 3a2 2 0 100 4h12a2 2 0 100-4H4z" />
                    <path fill-rule="evenodd"
                        d="M3 8h14v7a2 2 0 01-2 2H5a2 2 0 01-2-2V8zm5 3a1 1 0 011-1h2a1 1 0 110 2H9a1 1 0 01-1-1z"
                        clip-rule="evenodd" />
                </svg>
                My Default Watchlist
            </h2>
        </div>
        <% } %>

            <% if (data.movies.length===0) { %>
                <div class=" py-20 text-center opacity-70">
                    <svg xmlns="http://www.w3.org/2000/svg"
                        class="mx-auto mb-4 h-24 w-24 text-base-content/30 translate-y-2" fill="none"
                        viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                            d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                    </svg>
                    <h3 class="mb-2 text-2xl font-bold">Your watchlist is empty</h3>
                    <p class="max-w-md mx-auto">Start building your collection by searching for movies you want to watch
                        later.
                    </p>
                    <a href="/movies/search"
                        class="btn btn-ghost mt-4 font-normal text-primary hover:bg-primary/10">Browse
                        Movies &rarr;</a>
                </div>
                <% } else { %>
                    <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
                        <% data.movies.forEach(movie=> { %>
                            <div
                                class="group card border border-base-content/5 bg-base-100/40 shadow-lg backdrop-blur-sm transition-all duration-300 hover:-translate-y-2 hover:shadow-primary/10 hover:shadow-2xl hover:border-primary/20">
                                <figure class="relative aspect-[2/3] overflow-hidden bg-base-300">
                                    <% if (movie.poster_path) { %>
                                        <img src="https://image.tmdb.org/t/p/w500<%= movie.poster_path %>"
                                            alt="<%= movie.title %>" loading="lazy"
                                            class="h-full w-full object-cover transition-transform duration-700 group-hover:scale-105" />
                                        <% } else { %>
                                            <div
                                                class="flex h-full w-full items-center justify-center bg-base-300 text-base-content/50">
                                                <span class="text-4xl font-bold opacity-20 capitalize">
                                                    <%= movie.title.charAt(0) %>
                                                </span>
                                            </div>
                                            <% } %>

                                                <!-- Overlay with Year -->
                                                <div
                                                    class="absolute bottom-0 left-0 w-full translate-y-full bg-gradient-to-t from-black/90 via-black/50 to-transparent p-4 transition-transform duration-300 group-hover:translate-y-0">
                                                    <span class="font-medium text-white tracking-wide">
                                                        <%= movie.release_date ? new
                                                            Date(movie.release_date).getFullYear() : 'Unknown' %>
                                                    </span>
                                                </div>

                                                <!-- Top Right Remove Action (visible on hover or always on touch) -->
                                                <form method="POST"
                                                    class="absolute top-2 right-2 opacity-0 transition-opacity duration-200 group-hover:opacity-100 focus-within:opacity-100">
                                                    <input type="hidden" name="action" value="delete" />
                                                    <input type="hidden" name="watchlist_id"
                                                        value="<%= movie.watchlist_id %>" />
                                                    <button type="submit"
                                                        class="btn btn-circle btn-sm btn-error text-white shadow-md border-none hover:bg-red-600 tooltip tooltip-left"
                                                        data-tip="Remove from watchlist">
                                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4"
                                                            fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                                stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                                        </svg>
                                                    </button>
                                                </form>
                                </figure>

                                <div class="card-body p-5">
                                    <h2 class="card-title mb-1 h-12 overflow-hidden text-lg font-bold leading-tight"
                                        title="<%= movie.title %>">
                                        <%= movie.title %>
                                    </h2>
                                    <p class="mb-4 h-12 line-clamp-2 text-sm text-base-content/60 font-light">
                                        <%= movie.overview || "No description available." %>
                                    </p>

                                    <div class="card-actions justify-end mt-auto pt-2 border-t border-base-content/5">
                                        <form method="POST" class="w-full">
                                            <input type="hidden" name="action" value="delete" />
                                            <input type="hidden" name="watchlist_id"
                                                value="<%= movie.watchlist_id %>" />
                                            <button type="submit"
                                                class="btn btn-ghost btn-xs w-full text-error hover:bg-error/10 gap-2">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none"
                                                    viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                                </svg>
                                                Remove
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                    <% } %>

                        <!-- New Watchlist Modal -->
                        <div x-show="showNewWatchlistModal" x-transition:enter="transition ease-out duration-200"
                            x-transition:enter-start="opacity-0" x-transition:enter-end="opacity-100"
                            x-transition:leave="transition ease-in duration-150" x-transition:leave-start="opacity-100"
                            x-transition:leave-end="opacity-0"
                            class="fixed inset-0 z-50 flex items-center justify-center bg-black/60 backdrop-blur-sm"
                            @click.self="showNewWatchlistModal = false"
                            @keydown.escape.window="showNewWatchlistModal = false">
                            <div x-show="showNewWatchlistModal" x-transition:enter="transition ease-out duration-200"
                                x-transition:enter-start="opacity-0 scale-95"
                                x-transition:enter-end="opacity-100 scale-100"
                                x-transition:leave="transition ease-in duration-150"
                                x-transition:leave-start="opacity-100 scale-100"
                                x-transition:leave-end="opacity-0 scale-95"
                                class="relative w-full max-w-md rounded-2xl border border-base-content/10 bg-base-200/95 p-6 shadow-2xl backdrop-blur-xl">
                                <!-- Close button -->
                                <button @click="showNewWatchlistModal = false"
                                    class="btn btn-circle btn-ghost btn-sm absolute right-4 top-4">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
                                        viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M6 18L18 6M6 6l12 12" />
                                    </svg>
                                </button>

                                <!-- Modal Header -->
                                <div class="mb-6">
                                    <h3
                                        class="text-2xl font-bold bg-gradient-to-br from-white to-white/60 bg-clip-text text-transparent">
                                        Create New Watchlist</h3>
                                    <p class="text-base-content/60 mt-1">Organize your movies into custom lists</p>
                                </div>

                                <!-- Form -->
                                <form method="POST" class="space-y-4">
                                    <input type="hidden" name="action" value="create_watchlist" />

                                    <div class="form-control">
                                        <label class="label">
                                            <span class="label-text font-medium">Watchlist Name</span>
                                        </label>
                                        <input type="text" name="watchlist_name" x-model="newWatchlistName"
                                            placeholder="e.g., Weekend Movies, Must Watch, Classics..."
                                            class="input input-bordered w-full bg-base-100/50 focus:border-secondary focus:ring-2 focus:ring-secondary/20"
                                            required />
                                    </div>

                                    <div class="flex gap-3 pt-4">
                                        <button type="button" @click="showNewWatchlistModal = false"
                                            class="btn btn-ghost flex-1">
                                            Cancel
                                        </button>
                                        <button type="submit"
                                            class="btn btn-secondary flex-1 gap-2 shadow-lg shadow-secondary/20">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20"
                                                fill="currentColor">
                                                <path fill-rule="evenodd"
                                                    d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z"
                                                    clip-rule="evenodd" />
                                            </svg>
                                            Create Watchlist
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
</div>