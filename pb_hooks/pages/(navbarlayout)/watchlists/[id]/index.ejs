<!-- Force Refresh -->
<script src="/js/watchlist-detail.js?v=<%= new Date().getTime() %>"></script>
<div class="w-full p-4" x-data="watchlistDetail()">
    <!-- Header -->
    <div class="container mx-auto mb-8 flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div>
            <div class="flex items-center gap-2 mb-2">
                <a href="/watchlists" class="btn btn-ghost btn-sm gap-2 text-base-content/60 hover:text-primary pl-0">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                    </svg>
                    Back to Watchlists
                </a>
            </div>
            <% if (data.list) { %>
                <h1
                    class="text-3xl font-bold bg-gradient-to-br from-white to-white/60 bg-clip-text text-transparent drop-shadow-sm">
                    <%= data.list.title %>
                </h1>
                <% if (data.list.description) { %>
                    <p class="text-base-content/80 mt-2 max-w-2xl">
                        <%= data.list.description %>
                    </p>
                    <% } %>
                        <% } else if (data.error) { %>
                            <h1 class="text-2xl font-bold text-error">Error</h1>
                            <p class="text-base-content/60 mt-1">
                                <%= data.error %>
                            </p>
                            <% } %>
                                <p class="text-base-content/60 mt-1">
                                    Created on <%= new Date(data.list.created).toLocaleDateString() %>
                                </p>
        </div>

        <% if (data.list && data.list.is_owner) { %>
            <div class="flex gap-3">
                <button @click="showEditModal = true"
                    class="btn btn-ghost gap-2 hover:bg-base-100 transition-all duration-300">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path
                            d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                    </svg>
                    Edit
                </button>
                <button @click="showShareModal = true"
                    class="btn btn-secondary gap-2 shadow-lg shadow-secondary/20 hover:scale-105 hover:shadow-secondary/40 transition-all duration-300">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path
                            d="M15 8a3 3 0 10-2.977-2.63l-4.94 2.47a3 3 0 100 4.319l4.94 2.47a3 3 0 10.895-1.789l-4.94-2.47a3.027 3.027 0 000-.74l4.94-2.47C13.456 7.68 14.19 8 15 8z" />
                    </svg>
                    Share
                </button>
                <a href="/movies/search?watchlistId=<%= data.list.id %>"
                    class="btn btn-primary gap-2 shadow-lg shadow-primary/20 hover:scale-105 hover:shadow-primary/40 transition-all duration-300">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd"
                            d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z"
                            clip-rule="evenodd" />
                    </svg>
                    Add Movie
                </a>
            </div>
            <% } %>
    </div>

    <% if (data.message) { %>
        <div class="alert alert-success shadow-lg mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none"
                viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>
                <%= data.message %>
            </span>
        </div>
        <% } %>

            <% if (data.error && data.list) { %>
                <div class="alert alert-error shadow-lg mb-6">
                    <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none"
                        viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span>
                        <%= data.error %>
                    </span>
                </div>
                <% } %>


                    <% if (data.list) { %>
                        <!-- Share Modal -->
                        <div x-show="showShareModal" x-cloak x-transition:enter="transition ease-out duration-200"
                            x-transition:enter-start="opacity-0" x-transition:enter-end="opacity-100"
                            x-transition:leave="transition ease-in duration-150" x-transition:leave-start="opacity-100"
                            x-transition:leave-end="opacity-0"
                            class="fixed inset-0 z-50 flex items-center justify-center bg-black/60 backdrop-blur-sm"
                            @click.self="showShareModal = false" @keydown.escape.window="showShareModal = false">

                            <div x-show="showShareModal" x-transition:enter="transition ease-out duration-200"
                                x-transition:enter-start="opacity-0 scale-95"
                                x-transition:enter-end="opacity-100 scale-100"
                                x-transition:leave="transition ease-in duration-150"
                                x-transition:leave-start="opacity-100 scale-100"
                                x-transition:leave-end="opacity-0 scale-95"
                                class="relative w-full max-w-md rounded-2xl border border-base-content/10 bg-base-200/95 p-6 shadow-2xl backdrop-blur-xl">

                                <button @click="showShareModal = false"
                                    class="btn btn-circle btn-ghost btn-sm absolute right-4 top-4">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
                                        viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M6 18L18 6M6 6l12 12" />
                                    </svg>
                                </button>

                                <h3
                                    class="text-2xl font-bold bg-gradient-to-br from-white to-white/60 bg-clip-text mb-2">
                                    Share Watchlist</h3>
                                <p class="text-base-content/60 mb-6">Invite friends to view this watchlist.</p>

                                <div class="max-h-[60vh] overflow-y-auto pr-2 space-y-2">
                                    <% if (data.users && data.users.length> 0) { %>
                                        <% data.users.forEach(u=> { %>
                                            <div
                                                class="flex items-center justify-between p-3 bg-base-100 rounded-lg border border-base-content/5">
                                                <div class="flex items-center gap-3">
                                                    <div class="avatar placeholder">
                                                        <div class="bg-neutral text-neutral-content rounded-full w-8">
                                                            <span class="text-xs">
                                                                <%= u.email.substring(0, 2).toUpperCase() %>
                                                            </span>
                                                        </div>
                                                    </div>
                                                    <span class="font-medium text-sm">
                                                        <%= u.email %>
                                                    </span>
                                                </div>
                                                <form method="POST">
                                                    <input type="hidden" name="action" value="invite_user">
                                                    <input type="hidden" name="user_id" value="<%= u.id %>">
                                                    <button type="submit" class="btn btn-sm btn-secondary">Add</button>
                                                </form>
                                            </div>
                                            <% }) %>
                                                <% } else { %>
                                                    <div class="text-center py-8 opacity-50">
                                                        <p>No other users found to add.</p>
                                                    </div>
                                                    <% } %>
                                </div>

                                <div class="modal-action mt-6">
                                    <button type="button" @click="showShareModal = false"
                                        class="btn btn-ghost w-full">Close</button>
                                </div>
                            </div>
                        </div>


                        <!-- Edit Modal -->
                        <div x-show="showEditModal" x-cloak x-transition:enter="transition ease-out duration-200"
                            x-transition:enter-start="opacity-0" x-transition:enter-end="opacity-100"
                            x-transition:leave="transition ease-in duration-150" x-transition:leave-start="opacity-100"
                            x-transition:leave-end="opacity-0"
                            class="fixed inset-0 z-50 flex items-center justify-center bg-black/60 backdrop-blur-sm"
                            @click.self="showEditModal = false" @keydown.escape.window="showEditModal = false">

                            <div x-show="showEditModal" x-transition:enter="transition ease-out duration-200"
                                x-transition:enter-start="opacity-0 scale-95"
                                x-transition:enter-end="opacity-100 scale-100"
                                x-transition:leave="transition ease-in duration-150"
                                x-transition:leave-start="opacity-100 scale-100"
                                x-transition:leave-end="opacity-0 scale-95"
                                class="relative w-full max-w-md rounded-2xl border border-base-content/10 bg-base-200/95 p-6 shadow-2xl backdrop-blur-xl">

                                <button @click="showEditModal = false"
                                    class="btn btn-circle btn-ghost btn-sm absolute right-4 top-4">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
                                        viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M6 18L18 6M6 6l12 12" />
                                    </svg>
                                </button>

                                <h3
                                    class="text-2xl font-bold bg-gradient-to-br from-white to-white/60 bg-clip-text mb-2">
                                    Edit Watchlist</h3>

                                <form method="POST" class="space-y-4">
                                    <input type="hidden" name="action" value="update_list">

                                    <div class="form-control">
                                        <label class="label">
                                            <span class="label-text">Watchlist Name</span>
                                        </label>
                                        <input type="text" name="list_title" value="<%= data.list.title %>"
                                            class="input input-bordered w-full" required />
                                    </div>

                                    <div class="form-control">
                                        <label class="label">
                                            <span class="label-text">Description</span>
                                        </label>
                                        <textarea name="description" class="textarea textarea-bordered h-24"
                                            placeholder="Optional description..."><%= data.list.description || '' %></textarea>
                                    </div>

                                    <div class="modal-action">
                                        <button type="submit" class="btn btn-primary w-full">Save Changes</button>
                                    </div>
                                </form>

                                <div class="divider">Danger Zone</div>

                                <button type="button" @click="openDeleteModal()"
                                    class="btn btn-error btn-outline w-full">Delete
                                    Watchlist</button>
                            </div>
                        </div>

                        <!-- Delete Confirmation Modal -->
                        <div x-show="showDeleteModal" x-cloak x-transition:enter="transition ease-out duration-200"
                            x-transition:enter-start="opacity-0" x-transition:enter-end="opacity-100"
                            x-transition:leave="transition ease-in duration-150" x-transition:leave-start="opacity-100"
                            x-transition:leave-end="opacity-0"
                            class="fixed inset-0 z-50 flex items-center justify-center bg-black/60 backdrop-blur-sm"
                            @click.self="showDeleteModal = false" @keydown.escape.window="showDeleteModal = false">

                            <div x-show="showDeleteModal" x-transition:enter="transition ease-out duration-200"
                                x-transition:enter-start="opacity-0 scale-95"
                                x-transition:enter-end="opacity-100 scale-100"
                                x-transition:leave="transition ease-in duration-150"
                                x-transition:leave-start="opacity-100 scale-100"
                                x-transition:leave-end="opacity-0 scale-95"
                                class="relative w-full max-w-sm rounded-2xl border border-error/20 bg-base-200/95 p-6 shadow-2xl backdrop-blur-xl">

                                <h3 class="text-xl font-bold text-error mb-2">Delete Watchlist?</h3>
                                <p class="text-base-content/70 mb-6">Are you sure you want to delete this watchlist?
                                    This
                                    action cannot be undone.</p>

                                <div class="flex gap-3">
                                    <button type="button" @click="showDeleteModal = false"
                                        class="btn btn-ghost flex-1">Cancel</button>

                                    <form method="POST" class="flex-1">
                                        <input type="hidden" name="action" value="delete_list">
                                        <button type="submit" class="btn btn-error w-full">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <!-- Edit Entry Modal (Update Date / Delete) -->
                        <div x-show="showDateModal" x-cloak x-transition:enter="transition ease-out duration-200"
                            x-transition:enter-start="opacity-0" x-transition:enter-end="opacity-100"
                            x-transition:leave="transition ease-in duration-150" x-transition:leave-start="opacity-100"
                            x-transition:leave-end="opacity-0"
                            class="fixed inset-0 z-50 flex items-center justify-center bg-black/60 backdrop-blur-sm"
                            @click.self="showDateModal = false" @keydown.escape.window="showDateModal = false">

                            <div x-show="showDateModal" x-transition:enter="transition ease-out duration-200"
                                x-transition:enter-start="opacity-0 scale-95"
                                x-transition:enter-end="opacity-100 scale-100"
                                x-transition:leave="transition ease-in duration-150"
                                x-transition:leave-start="opacity-100 scale-100"
                                x-transition:leave-end="opacity-0 scale-95"
                                class="relative w-full max-w-md rounded-2xl border border-base-content/10 bg-base-200/95 p-6 shadow-2xl backdrop-blur-xl">

                                <h3 class="text-xl font-bold mb-4">Edit Entry</h3>

                                <!-- Update Form -->
                                <form method="POST" id="updateDateForm" class="space-y-4">
                                    <input type="hidden" name="action" value="update_history_item">
                                    <input type="hidden" name="history_id" :value="editHistoryId">

                                    <div class="form-control">
                                        <label class="label">
                                            <span class="label-text">Date Watched</span>
                                        </label>
                                        <input type="date" name="watched_date" x-model="editDateValue"
                                            class="input input-bordered w-full" />
                                    </div>

                                    <div class="grid grid-cols-3 gap-2">
                                        <div class="form-control">
                                            <label class="label p-1">
                                                <span class="label-text text-xs">TMDB</span>
                                            </label>
                                            <input type="number" step="any" min="0" max="10" name="tmdb_score"
                                                x-model="editTmdbScore"
                                                class="input input-bordered w-full px-2 text-center" placeholder="-" />
                                        </div>
                                        <div class="form-control">
                                            <label class="label p-1">
                                                <span class="label-text text-xs">IMDB</span>
                                            </label>
                                            <input type="number" step="any" min="0" max="10" name="imdb_score"
                                                x-model="editImdbScore"
                                                class="input input-bordered w-full px-2 text-center" placeholder="-" />
                                        </div>
                                        <div class="form-control">
                                            <label class="label p-1">
                                                <span class="label-text text-xs">RT</span>
                                            </label>
                                            <input type="number" step="1" min="0" max="100" name="rt_score"
                                                x-model="editRtScore"
                                                class="input input-bordered w-full px-2 text-center" placeholder="-" />
                                        </div>
                                    </div>
                                </form>

                                <div class="modal-action flex justify-between items-center mt-6">
                                    <!-- Delete Form -->
                                    <form method="POST" @submit.prevent="openItemDeleteModal()">
                                        <button type="submit" class="btn btn-error btn-outline btn-sm">Remove</button>
                                    </form>

                                    <!-- Actions -->
                                    <div class="flex gap-2">
                                        <button type="button" @click="showDateModal = false"
                                            class="btn btn-ghost">Cancel</button>
                                        <button type="submit" form="updateDateForm"
                                            class="btn btn-primary">Save</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <% } %>

                            <!-- Item Delete Confirmation Modal -->
                            <div x-show="showItemDeleteModal" x-cloak
                                x-transition:enter="transition ease-out duration-200"
                                x-transition:enter-start="opacity-0" x-transition:enter-end="opacity-100"
                                x-transition:leave="transition ease-in duration-150"
                                x-transition:leave-start="opacity-100" x-transition:leave-end="opacity-0"
                                class="fixed inset-0 z-50 flex items-center justify-center bg-black/60 backdrop-blur-sm"
                                @click.self="showItemDeleteModal = false"
                                @keydown.escape.window="showItemDeleteModal = false">

                                <div x-show="showItemDeleteModal" x-transition:enter="transition ease-out duration-200"
                                    x-transition:enter-start="opacity-0 scale-95"
                                    x-transition:enter-end="opacity-100 scale-100"
                                    x-transition:leave="transition ease-in duration-150"
                                    x-transition:leave-start="opacity-100 scale-100"
                                    x-transition:leave-end="opacity-0 scale-95"
                                    class="relative w-full max-w-sm rounded-2xl border border-error/20 bg-base-200/95 p-6 shadow-2xl backdrop-blur-xl">

                                    <h3 class="text-xl font-bold text-error mb-2">Remove Movie?</h3>
                                    <p class="text-base-content/70 mb-6">Are you sure you want to remove this movie from
                                        your
                                        watchlist?</p>

                                    <div class="flex gap-3">
                                        <button type="button" @click="showItemDeleteModal = false; showDateModal = true"
                                            class="btn btn-ghost flex-1">Cancel</button>

                                        <form method="POST" class="flex-1">
                                            <input type="hidden" name="action" value="delete_history_item">
                                            <input type="hidden" name="history_id" :value="editHistoryId">
                                            <button type="submit" class="btn btn-error w-full">Remove</button>
                                        </form>
                                    </div>
                                </div>
                            </div>

                            <% if ((!data.movies || data.movies.length===0) && !data.error) { %>
                                <div class="py-20 text-center opacity-70">
                                    <svg xmlns="http://www.w3.org/2000/svg"
                                        class="mx-auto mb-4 h-24 w-24 text-base-content/30 translate-y-2" fill="none"
                                        viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                                            d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                                    </svg>
                                    <h3 class="mb-2 text-2xl font-bold">This list is empty</h3>
                                    <p class="max-w-md mx-auto">Start building your collection by searching for movies.
                                    </p>
                                    <a href="/movies/search"
                                        class="btn btn-ghost mt-4 font-normal text-primary hover:bg-primary/10">Browse
                                        Movies &rarr;</a>
                                </div>
                                <% } else { %>
                                    <div
                                        class="overflow-x-auto w-full bg-base-100/40 rounded-xl border border-base-content/5 shadow-lg backdrop-blur-sm">
                                        <table class="table w-full">
                                            <!-- head -->
                                            <thead>
                                                <tr class="bg-base-200/50">
                                                    <th>Poster</th>
                                                    <th>Title</th>
                                                    <th>Release Date</th>
                                                    <th>Runtime</th>
                                                    <th>Score</th>
                                                    <th>Status</th>
                                                    <th>Watched At</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% data.movies.forEach(movie=> { %>
                                                    <tr class="hover transition-colors duration-200">
                                                        <td>
                                                            <div class="avatar">
                                                                <div class="mask mask-squircle w-12 h-18 bg-base-300">
                                                                    <% if (movie.poster_path) { %>
                                                                        <img src="https://image.tmdb.org/t/p/w200<%= movie.poster_path %>"
                                                                            alt="<%= movie.title %>" loading="lazy" />
                                                                        <% } else { %>
                                                                            <div
                                                                                class="w-full h-full flex items-center justify-center text-xs opacity-50">
                                                                                No Img</div>
                                                                            <% } %>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="font-bold text-lg"><a
                                                                    href="/movies/<%= movie.tmdb_id %>"
                                                                    class="hover:text-primary hover:underline transition-colors">
                                                                    <%= movie.title %>
                                                                </a></div>
                                                            <% if (movie.tagline) { %>
                                                                <div class="text-sm opacity-50 italic max-w-xs truncate"
                                                                    title="<%= movie.tagline %>">
                                                                    <%= movie.tagline %>
                                                                </div>
                                                                <% } %>
                                                        </td>
                                                        <td>
                                                            <%= movie.release_date ? new
                                                                Date(movie.release_date).toLocaleDateString()
                                                                : 'Unknown' %>
                                                        </td>
                                                        <td>
                                                            <%= movie.runtime ? movie.runtime + ' min' : 'N/A' %>
                                                        </td>
                                                        <td>
                                                            <div class="flex flex-col gap-1">
                                                                <span
                                                                    class="badge badge-sm badge-ghost whitespace-nowrap"
                                                                    title="TMDB Score">TMDB:
                                                                    <%= movie.tmdb_score ? movie.tmdb_score : '-' %>
                                                                </span>
                                                                <span
                                                                    class="badge badge-sm badge-ghost whitespace-nowrap"
                                                                    title="IMDB Score">IMDB:
                                                                    <%= movie.imdb_score ? movie.imdb_score : '-' %>
                                                                </span>
                                                                <span
                                                                    class="badge badge-sm badge-ghost whitespace-nowrap"
                                                                    title="RT Score">RT:
                                                                    <%= movie.rt_score ? movie.rt_score + '%' : '-' %>
                                                                </span>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <% let statusClass='badge-outline' ; if
                                                                (movie.status==='Released' )
                                                                statusClass='badge-success badge-outline' ; else if
                                                                (movie.status==='Post Production' )
                                                                statusClass='badge-warning badge-outline' ; else if
                                                                (movie.status==='In Production' )
                                                                statusClass='badge-info badge-outline' ; else if
                                                                (movie.status==='Canceled' )
                                                                statusClass='badge-error badge-outline' ; %>
                                                                <div class="badge <%= statusClass %> whitespace-nowrap">
                                                                    <%= movie.status || 'Unknown' %>
                                                                </div>
                                                        </td>
                                                        <td>
                                                            <div class="flex items-center gap-2">
                                                                <span>
                                                                    <%= movie.watched_at ? new
                                                                        Date(movie.watched_at).toLocaleDateString()
                                                                        : '-' %>
                                                                </span>
                                                                <% if (data.list && data.list.is_owner) { %>
                                                                    <button @click="
                                                editHistoryId = '<%= movie.history_id %>';
                                                editDateValue = '<%= movie.watched_at ? new Date(movie.watched_at).toISOString().slice(0, 10) : '' %>';
                                                editTmdbScore = '<%= movie.tmdb_score || '' %>';
                                                editImdbScore = '<%= movie.imdb_score || '' %>';
                                                editRtScore = '<%= movie.rt_score || '' %>';
                                                showDateModal = true
                                            " class="btn btn-xs btn-ghost btn-circle opacity-50 hover:opacity-100"
                                                                        title="Edit Entry">
                                                                        <svg xmlns="http://www.w3.org/2000/svg"
                                                                            class="h-4 w-4" fill="none"
                                                                            viewBox="0 0 24 24" stroke="currentColor">
                                                                            <path stroke-linecap="round"
                                                                                stroke-linejoin="round" stroke-width="2"
                                                                                d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                                                                        </svg>
                                                                    </button>
                                                                    <% } %>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                    <% } %>
</div>