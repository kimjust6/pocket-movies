<script>
    document.addEventListener('alpine:init', () => {
        Alpine.data('weddingPage', () => ({
            submitted: false,
            form: {
                name: '',
                email: '',
                attending: '',
                guests: '1',
                dietary: '',
                message: '',
            },
            countdown: {
                days: 0,
                hours: 0,
                minutes: 0,
                seconds: 0,
            },

            init() {
                this.updateCountdown()
                setInterval(() => this.updateCountdown(), 1000)
            },

            updateCountdown() {
                const weddingDate = new Date('2026-06-14T16:00:00').getTime()
                const now = new Date().getTime()
                const distance = weddingDate - now

                this.countdown.days = Math.floor(
                    distance / (1000 * 60 * 60 * 24)
                )
                this.countdown.hours = Math.floor(
                    (distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60)
                )
                this.countdown.minutes = Math.floor(
                    (distance % (1000 * 60 * 60)) / (1000 * 60)
                )
                this.countdown.seconds = Math.floor(
                    (distance % (1000 * 60)) / 1000
                )
            },

            submitRsvp() {
                // Here you would typically send the data to your backend
                console.log('RSVP submitted:', this.form)
                this.submitted = true
            },

            resetForm() {
                this.submitted = false
                this.form = {
                    name: '',
                    email: '',
                    attending: '',
                    guests: '1',
                    dietary: '',
                    message: '',
                }
            },

            scrollToRsvp() {
                document
                    .getElementById('rsvp')
                    .scrollIntoView({ behavior: 'smooth' })
            },
        }))
    })
</script>
