<!-- Hero Section with Dark Gradient Background -->
<div class="min-h-screen" id="home">
    <!-- Hero -->
    <div class="hero relative min-h-[80vh] overflow-hidden bg-gradient-to-b from-base-200 via-base-100">
        <!-- Background Pattern -->
        <div class="absolute inset-0 overflow-hidden pointer-events-none">
            <!-- Subtle Film Reel Pattern -->
            <div
                class="absolute inset-0 bg-[linear-gradient(to_right,#80808008_1px,transparent_1px),linear-gradient(to_bottom,#80808008_1px,transparent_1px)] bg-[size:40px_40px]">
            </div>
            <!-- Cinematic Gradient Overlay -->
            <div class="absolute inset-0 bg-gradient-to-t from-base-100 via-transparent to-transparent"></div>
            <!-- Top Glow -->
            <div
                class="absolute top-0 left-1/2 -translate-x-1/2 w-[1200px] h-[600px] bg-primary/5 rounded-full blur-[150px]">
            </div>
        </div>

        <div class="hero-content relative z-10 py-20 text-left place-items-start">
            <div class="max-w-4xl">
                <!-- Main Headline -->
                <h1
                    class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold mb-6 tracking-tight leading-tight text-shadow-lg">
                    <span class="text-base-content ">
                        <span class="text-primary italic">Track</span> films you've watched.
                    </span>
                    <div class="text-base-content ">
                        Share films you <span class="text-primary italic">love.</span>
                    </div>
                </h1>

                <!-- Tagline -->
                <span
                    class="text-lg md:text-xl text-base-content/60 mb-10 leading-relaxed max-w-2xl mx-auto italic text-left items-start">
                    Log, rate, and review. Create lists and share your taste with friends.
                </span>

                <!-- CTA Buttons -->
                <div class="flex flex-col justify-start gap-4 sm:flex-row pt-8">
                    <a href="/login"
                        class="btn btn-primary btn-lg gap-2 shadow-lg transition-all duration-300 hover:scale-105">
                        Get Started — It's Free
                    </a>
                    <a href="#features"
                        class="btn btn-ghost btn-lg gap-2 border border-base-content/20 transition-all duration-300 hover:border-base-content/40">
                        Learn More
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recently Watched Section -->
    <section class="bg-base-100 px-4 py-16">
        <div class="mx-auto max-w-6xl">
            <div class="flex justify-between items-center mb-8">
                <div>
                    <h2 class="text-2xl md:text-3xl font-bold">Recently Watched</h2>
                    <p class="text-base-content/60 mt-1">What the community is watching right now</p>
                </div>
                <a href="/movies/search" class="btn btn-ghost btn-sm gap-1">
                    Search Movies
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                </a>
            </div>

            <!-- Movie Posters Grid -->
            <div class="grid grid-cols-3 sm:grid-cols-4 md:grid-cols-6 gap-3 md:gap-4">
                <% if (data.recentMovies && data.recentMovies.length> 0) { %>
                    <% data.recentMovies.forEach(movie=> { %>
                        <a href="/movies/<%= movie.tmdb_id %>" class="group cursor-pointer block">
                            <div
                                class="aspect-[2/3] rounded-lg bg-base-200 overflow-hidden shadow-lg transition-all duration-300 group-hover:scale-105 group-hover:shadow-xl relative">
                                <% if (movie.poster_path) { %>
                                    <img src="https://image.tmdb.org/t/p/w500<%= movie.poster_path %>"
                                        alt="<%= movie.title %>" class="w-full h-full object-cover">
                                    <% } else { %>
                                        <div class="absolute inset-0 flex items-center justify-center bg-base-300">
                                            <svg xmlns="http://www.w3.org/2000/svg"
                                                class="h-10 w-10 text-base-content/20" fill="none" viewBox="0 0 24 24"
                                                stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                                                    d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z" />
                                            </svg>
                                        </div>
                                        <% } %>
                                            <div
                                                class="absolute bottom-0 left-0 right-0 p-2 bg-gradient-to-t from-black/80 to-transparent opacity-0 group-hover:opacity-100 transition-opacity">
                                                <p class="text-white text-xs font-medium truncate">
                                                    <%= movie.title %>
                                                </p>
                                            </div>
                            </div>
                        </a>
                        <% }); %>
                            <% } else { %>
                                <!-- Fallback if no movies -->
                                <div class="col-span-full text-center py-10 text-base-content/50">
                                    <p>No recently watched movies yet.</p>
                                </div>
                                <% } %>
            </div>
        </div>
    </section>

    <!-- Featured Lists & Recent Activity Section -->
    <section class="bg-base-200/50 px-4 py-16">
        <div class="mx-auto max-w-6xl">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12">
                <!-- Featured Lists -->
                <div>
                    <div class="flex justify-between items-center mb-6">
                        <h2 class="text-xl md:text-2xl font-bold">Featured Lists</h2>
                        <a href="/watchlists" class="btn btn-ghost btn-sm gap-1">
                            View All Lists
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24"
                                stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M9 5l7 7-7 7" />
                            </svg>
                        </a>
                    </div>
                    <p class="text-base-content/60 mb-6 -mt-4">Curated collections from the community</p>

                    <div class="space-y-4">
                        <% if (data.topLists && data.topLists.length> 0) { %>
                            <% data.topLists.forEach(list=> { %>
                                <a href="/watchlists/<%= list.id %>"
                                    class="card bg-base-100 shadow-md hover:shadow-lg transition-all duration-300 cursor-pointer group">
                                    <div class="card-body p-4 flex-row items-center gap-4">
                                        <div class="flex -space-x-2">
                                            <% if (list.posters.length> 0) { %>
                                                <% list.posters.forEach(poster=> { %>
                                                    <img src="https://image.tmdb.org/t/p/w92<%= poster %>"
                                                        class="w-10 h-14 rounded object-cover border-2 border-base-100">
                                                    <% }); %>
                                                        <% for (let i=list.posters.length; i < 3; i++) { %>
                                                            <div
                                                                class="w-10 h-14 rounded bg-gradient-to-br from-primary/40 to-secondary/40 border-2 border-base-100">
                                                            </div>
                                                            <% } %>
                                                                <% } else { %>
                                                                    <div
                                                                        class="w-10 h-14 rounded bg-gradient-to-br from-primary/40 to-secondary/40">
                                                                    </div>
                                                                    <div
                                                                        class="w-10 h-14 rounded bg-gradient-to-br from-secondary/40 to-accent/40">
                                                                    </div>
                                                                    <div
                                                                        class="w-10 h-14 rounded bg-gradient-to-br from-accent/40 to-primary/40">
                                                                    </div>
                                                                    <% } %>
                                        </div>
                                        <div class="flex-1 min-w-0">
                                            <h3
                                                class="font-semibold group-hover:text-primary transition-colors truncate">
                                                <%= list.title %>
                                            </h3>
                                            <p class="text-sm text-base-content/60">
                                                <%= list.description %>
                                            </p>
                                            <% if (list.description) { %>
                                                <p class="text-xs text-base-content/50 truncate mt-1">
                                                    <%= list.count %>
                                                        <%= list.count===1 ? 'film' : 'films' %>
                                                </p>
                                                <% } %>
                                        </div>
                                        <svg xmlns="http://www.w3.org/2000/svg"
                                            class="h-5 w-5 text-base-content/30 group-hover:text-primary transition-colors"
                                            fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M9 5l7 7-7 7" />
                                        </svg>
                                    </div>
                                </a>
                                <% }); %>
                                    <% } else { %>
                                        <div class="text-center py-10 text-base-content/50">
                                            <p>No lists yet.</p>
                                        </div>
                                        <% } %>
                    </div>
                </div>

                <!-- Recent Activity -->
                <div>
                    <div class="flex justify-between items-center mb-6">
                        <h2 class="text-xl md:text-2xl font-bold">Recent Activity</h2>
                        <!-- <a href="#" class="btn btn-ghost btn-sm gap-1">
                            View All
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24"
                                stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M9 5l7 7-7 7" />
                            </svg>
                        </a> -->
                    </div>

                    <div class="space-y-4">
                        <% if (data.recentActivity && data.recentActivity.length> 0) { %>
                            <% const colors=['primary', 'secondary' , 'accent' , 'info' ]; %>
                                <% data.recentActivity.forEach((activity, index)=> { %>
                                    <div class="card bg-base-100 shadow-md">
                                        <div class="card-body p-4">
                                            <div class="flex items-start gap-3">
                                                <div class="avatar placeholder">
                                                    <div
                                                        class="bg-<%= colors[index % 4] %> text-<%= colors[index % 4] %>-content rounded-full w-10">
                                                        <span class="text-sm font-bold">
                                                            <%= activity.userInitials || 'U' %>
                                                        </span>
                                                    </div>
                                                </div>
                                                <div class="flex-1 min-w-0">
                                                    <p class="text-sm">
                                                        <% if (activity.type==='add' ) { %>
                                                            <span class="text-base-content/60">A movie was added to
                                                            </span>
                                                            <a href="/watchlists/<%= activity.listId %>"
                                                                class="font-semibold hover:text-primary">
                                                                <%= activity.listTitle %>
                                                            </a>
                                                            <span class="text-base-content/60">: </span>
                                                            <a href="/movies/<%= activity.movieId %>"
                                                                class="font-semibold text-primary hover:underline">
                                                                <%= activity.movieTitle %>
                                                            </a>
                                                            <% } else { %>
                                                                <span class="font-semibold">
                                                                    <%= activity.userName %>
                                                                </span>
                                                                <span class="text-base-content/60">
                                                                    <%= activity.type==='review' ? 'reviewed' : 'rated'
                                                                        %>
                                                                </span>
                                                                <a href="/movies/<%= activity.movieId %>"
                                                                    class="font-semibold text-primary hover:underline">
                                                                    <%= activity.movieTitle %>
                                                                </a>
                                                                <% } %>
                                                    </p>
                                                    <% if (activity.review) { %>
                                                        <p class="text-sm text-base-content/60 mt-1 line-clamp-2">
                                                            <%= activity.review %>
                                                        </p>
                                                        <% } %>
                                                            <% if (activity.rating> 0) { %>
                                                                <div class="flex items-center gap-1 mt-2">
                                                                    <div class="rating rating-sm rating-half">
                                                                        <input type="radio" name="rating-<%= index %>"
                                                                            class="rating-hidden" />
                                                                        <% for (let i=1; i <=5; i++) { %>
                                                                            <input type="radio"
                                                                                name="rating-<%= index %>"
                                                                                class="mask mask-star-2 mask-half-1 bg-warning"
                                                                                disabled <%=activity.rating===(i - 0.5)
                                                                                ? 'checked' : '' %> />
                                                                            <input type="radio"
                                                                                name="rating-<%= index %>"
                                                                                class="mask mask-star-2 mask-half-2 bg-warning"
                                                                                disabled <%=activity.rating===i
                                                                                ? 'checked' : '' %> />
                                                                            <% } %>
                                                                    </div>
                                                                </div>
                                                                <% } %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% }); %>
                                        <% } else { %>
                                            <div class="text-center py-10 text-base-content/50">
                                                <p>No recent activity yet.</p>
                                            </div>
                                            <% } %>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="bg-base-100 px-4 py-20">
        <div class="mx-auto max-w-6xl">
            <div class="text-center mb-12">
                <h2 class="text-3xl md:text-4xl font-bold mb-4">
                    Everything you need to track your film journey
                </h2>
                <p class="text-lg text-base-content/60 max-w-2xl mx-auto">
                    More than just a watchlist. A complete toolkit for the modern cinephile.
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <!-- Feature Card 1: Log Your Watches -->
                <div class="card bg-base-200/50 hover:bg-base-200 transition-all duration-300">
                    <div class="card-body">
                        <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-xl bg-primary/10">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" fill="none"
                                viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                    d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round"
                                    d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                            </svg>
                        </div>
                        <h3 class="card-title text-lg">Log Your Watches</h3>
                        <p class="text-base-content/60">
                            Keep a detailed diary of every film you watch with ratings, reviews, and viewing dates.
                        </p>
                    </div>
                </div>

                <!-- Feature Card 2: Create Lists -->
                <div class="card bg-base-200/50 hover:bg-base-200 transition-all duration-300">
                    <div class="card-body">
                        <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-xl bg-secondary/10">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-secondary" fill="none"
                                viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                    d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                            </svg>
                        </div>
                        <h3 class="card-title text-lg">Create Lists</h3>
                        <p class="text-base-content/60">
                            Organize films into custom lists. Top 10s, genres, moods, or anything you can imagine.
                        </p>
                    </div>
                </div>

                <!-- Feature Card 3: Follow Friends -->
                <div class="card bg-base-200/50 hover:bg-base-200 transition-all duration-300">
                    <div class="card-body">
                        <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-xl bg-accent/10">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-accent" fill="none"
                                viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                    d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                            </svg>
                        </div>
                        <h3 class="card-title text-lg">Follow Friends</h3>
                        <p class="text-base-content/60">
                            See what friends are watching and discover new films through their activity.
                        </p>
                    </div>
                </div>

                <!-- Feature Card 4: Track Your Stats -->
                <div class="card bg-base-200/50 hover:bg-base-200 transition-all duration-300">
                    <div class="card-body">
                        <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-xl bg-info/10">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-info" fill="none"
                                viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                    d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                            </svg>
                        </div>
                        <h3 class="card-title text-lg">Track Your Stats</h3>
                        <p class="text-base-content/60">
                            View insights on your watching habits, favorite genres, and yearly progress.
                        </p>
                    </div>
                </div>

                <!-- Feature Card 5: Get Recommendations -->
                <div class="card bg-base-200/50 hover:bg-base-200 transition-all duration-300">
                    <div class="card-body">
                        <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-xl bg-success/10">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-success" fill="none"
                                viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                    d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                            </svg>
                        </div>
                        <h3 class="card-title text-lg">Get Recommendations</h3>
                        <p class="text-base-content/60">
                            Receive personalized suggestions based on your taste and viewing history.
                        </p>
                    </div>
                </div>

                <!-- Feature Card 6: Share Your Taste -->
                <div class="card bg-base-200/50 hover:bg-base-200 transition-all duration-300">
                    <div class="card-body">
                        <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-xl bg-warning/10">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-warning" fill="none"
                                viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                    d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
                            </svg>
                        </div>
                        <h3 class="card-title text-lg">Share Your Taste</h3>
                        <p class="text-base-content/60">
                            Export lists, share reviews on social media, and show off your film knowledge.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="bg-gradient-to-br from-primary/10 via-base-200 to-secondary/10 px-4 py-20">
        <div class="mx-auto max-w-3xl text-center">
            <h2 class="mb-4 text-3xl md:text-4xl font-bold">Start your film journey today</h2>
            <p class="mb-8 text-lg text-base-content/60">
                Join to start tracking your film journey with over 1,200,000 films to track, rate, and share.
            </p>
            <a href="/login"
                class="btn btn-primary btn-lg gap-2 shadow-lg transition-all duration-300 hover:scale-105 hover:shadow-primary/25">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                    stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round"
                        d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Get Started — It's Free
            </a>
        </div>
    </section>
</div>