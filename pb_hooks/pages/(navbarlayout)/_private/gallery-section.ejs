<!-- Instagram/Gallery Section -->
<section id="gallery" class="section-spacing">
    <h2 class="section-title mb-3 sm:mb-4 lg:mb-6 xl:mb-8 select-none">
        Instagram
    </h2>
    <p
        class="text-center text-[10px] sm:text-xs lg:text-base xl:text-lg text-base-content/60 mb-2 sm:mb-3 lg:mb-5 xl:mb-6 tracking-widest font-light uppercase"
    >
        Connect to Instagram and Tag This Event
    </p>
    <p
        class="text-center text-xl sm:text-2xl lg:text-4xl xl:text-5xl font-bold text-base-content mb-6 sm:mb-8 lg:mb-14 xl:mb-16 tracking-tight"
    >
        #YVONNE-JUSTIN
    </p>

    <!-- Instagram Photo Grid -->
    <div
        class="grid grid-cols-4 sm:grid-cols-4 lg:grid-cols-6 xl:grid-cols-8 gap-2 sm:gap-2.5 lg:gap-4 xl:gap-5 mb-6 sm:mb-8 lg:mb-12 xl:mb-16"
    >
        <template x-for="(image, index) in galleryImages" :key="index">
            <img
                :src="image"
                alt="Wedding photo"
                class="gallery-image"
                @click="openModal(index)"
            />
        </template>
    </div>

    <button
        @click="openModal(0)"
        class="btn btn-neutral w-full lg:max-w-3xl lg:mx-auto lg:block text-sm lg:text-lg xl:text-xl"
    >
        Open Gallery
    </button>
</section>
