<!-- Hero Section -->
<section id="home" class="section-spacing">
    <div class="text-center">
        <h1
            class="section-title text-6xl xl:text-9xl mb-2 sm:mb-3 lg:mb-6 leading-tight select-none"
        >
            Yvonne & Justin
        </h1>
        <p
            class="mt-2 sm:mt-3 lg:mt-6 xl:mt-8 text-lg tracking-[0.25em] sm:tracking-[0.3em] lg:tracking-[0.4em] text-base-content/60 font-light uppercase select-none"
        >
            August 7th 2027
        </p>
    </div>

    <!-- Photo - Single main photo -->
    <div class="flex justify-center mt-6 sm:mt-10 lg:mt-16 xl:mt-20">
        <img
            src="https://images.unsplash.com/photo-1519741497674-611481863552?auto=format&fit=crop&w=1200&q=80"
            alt="Wedding photo"
            class="w-full max-h-[400px] sm:max-h-[500px] lg:max-h-[700px] xl:max-h-[800px] object-cover rounded-box shadow-xl ring-1 ring-base-content/10"
        />
    </div>

    <!-- Countdown Timer -->
    <div
        class="text-center py-6 sm:py-10 lg:py-16 xl:py-20 border-y border-base-300 mt-6 sm:mt-10 lg:mt-16 xl:mt-20 select-none"
    >
        <div
            class="flex justify-center items-center gap-3 sm:gap-6 lg:gap-16 xl:gap-24"
        >
            <div class="text-center">
                <div class="countdown-number" x-text="countdown.days">183</div>
                <div class="countdown-label">days</div>
            </div>
            <div class="text-center">
                <div class="countdown-number" x-text="countdown.hours">23</div>
                <div class="countdown-label">hours</div>
            </div>
            <div class="text-center">
                <div class="countdown-number" x-text="countdown.minutes">
                    11
                </div>
                <div class="countdown-label">minutes</div>
            </div>
            <div class="text-center">
                <div class="countdown-number" x-text="countdown.seconds">
                    23
                </div>
                <div class="countdown-label">seconds</div>
            </div>
        </div>
    </div>
</section>
