<script server>
    const user = request.auth
    if (!user) {
        redirect('/login')
    }

    // Fetch fresh user data
    let profile = user
    try {
        profile = $app.findRecordById("users", user.id)
    } catch (e) {
        console.error("Failed to fetch fresh profile:", e)
    }
</script>

<div class="container mx-auto px-4 py-8">
    <div class="card bg-base-100 shadow-xl max-w-2xl mx-auto">
        <div class="card-body">
            <h2 class="card-title text-2xl mb-6">Profile</h2>

            <div class="flex items-center gap-6 mb-8">
                <div class="avatar placeholder">
                    <div class="bg-neutral text-neutral-content rounded-full w-24">
                        <% if (profile.avatar) { %>
                            <img src="<%= '/api/files/' + profile.collectionId + '/' + profile.id + '/' + profile.avatar %>"
                                alt="Avatar" />
                            <% } else { %>
                                <span class="text-3xl">
                                    <%= profile.email().slice(0, 1).toUpperCase() %>
                                </span>
                                <% } %>
                    </div>
                </div>
                <div>
                    <h3 class="text-xl font-bold">
                        <%= profile.getString('name') || profile.email() %>
                    </h3>
                    <% if (profile.getString('shortHand')) { %>
                        <p class="text-sm badge badge-ghost">@<%= profile.getString('shortHand') %>
                        </p>
                        <% } %>

                </div>
            </div>

            <div class="divider"></div>

            <div class="space-y-4">
                <div class="form-control w-full">
                    <label class="label">
                        <span class="label-text font-bold">Email</span>
                    </label>
                    <div class="p-3 bg-base-200 rounded-lg">
                        <%= profile.email() %>
                    </div>
                </div>

                <div class="form-control w-full">
                    <label class="label">
                        <span class="label-text font-bold">Display Name</span>
                    </label>
                    <div class="p-3 bg-base-200 rounded-lg">
                        <%= profile.getString('name') || 'Not set' %>
                    </div>
                </div>

                <div class="form-control w-full">
                    <label class="label">
                        <span class="label-text font-bold">Shorthand (@handle)</span>
                    </label>
                    <div class="p-3 bg-base-200 rounded-lg">
                        <%= profile.getString('shortHand') || 'Not set' %>
                    </div>
                </div>

                <div class="form-control w-full">
                    <label class="label">
                        <span class="label-text font-bold">Bio</span>
                    </label>
                    <div class="p-3 bg-base-200 rounded-lg min-h-[6rem] whitespace-pre-wrap">
                        <%= profile.getString('bio') || 'No bio provided.' %>
                    </div>
                </div>

                <div class="form-control w-full mt-4">
                    <label class="label">
                        <span class="label-text font-bold">Created</span>
                    </label>
                    <div class="p-3 bg-base-200 rounded-lg">
                        <%= (()=> {
                            const d = new Date(profile.getString('created'));
                            const months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov',
                            'Dec'];
                            return `${months[d.getMonth()]} ${d.getDate()} ${d.getFullYear()}`;
                            })() %>
                    </div>
                </div>

                <div class="card-actions justify-end mt-6">
                    <a href="/profile/edit" class="btn btn-primary">Edit Profile</a>
                </div>
            </div>
        </div>
    </div>
</div>