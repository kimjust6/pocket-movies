<div class="container mx-auto px-4 py-8 max-w-4xl">
    <div class="flex flex-col md:flex-row gap-8 md:gap-12 items-start justify-center">
        <!-- Left Column: Avatar -->
        <div class="flex-shrink-0 mx-auto md:mx-0">
            <div class="avatar placeholder">
                <div
                    class="w-32 md:w-40 rounded-full ring ring-primary ring-offset-base-100 ring-offset-2 overflow-hidden">
                    <% if (data.profile.getString('avatar')) { %>
                        <img src="<%= '/api/files/' + data.profile.collection().id + '/' + data.profile.id + '/' + data.profile.getString('avatar') %>"
                            alt="Avatar" />
                        <% } else { %>
                            <div
                                class="bg-neutral text-neutral-content w-full h-full flex items-center justify-center text-5xl">
                                <%= data.profile.email().slice(0, 1).toUpperCase() %>
                            </div>
                            <% } %>
                </div>
            </div>
        </div>

        <!-- Right Column: Info -->
        <div class="flex-grow space-y-6 w-full text-center md:text-left">
