<script server>
    const user = request.auth
    if (!user) {
        redirect('/login')
    }

    if (request.method === 'POST') {
        try {
            const data = body()
            const record = $app.dao().findRecordById("users", user.id)

            if (data.name) record.set("name", data.name)
            if (data.bio) record.set("bio", data.bio)
            if (data.shortHand) record.set("shortHand", data.shortHand)

            $app.dao().saveRecord(record)

            // Redirect to refresh the data
            redirect('/profile')
        } catch (err) {
            console.error('Profile update error:', err)
        }
    }
</script>

<div class="container mx-auto px-4 py-8">
    <div class="card bg-base-100 shadow-xl max-w-2xl mx-auto">
        <div class="card-body">
            <h2 class="card-title text-2xl mb-6">Profile</h2>

            <div class="flex items-center gap-6 mb-8">
                <div class="avatar placeholder">
                    <div class="bg-neutral text-neutral-content rounded-full w-24">
                        <% if (auth.avatar) { %>
                            <img src="<%= '/api/files/' + auth.collectionId + '/' + auth.id + '/' + auth.avatar %>"
                                alt="Avatar" />
                            <% } else { %>
                                <span class="text-3xl">
                                    <%= auth.email().slice(0, 1).toUpperCase() %>
                                </span>
                                <% } %>
                    </div>
                </div>
                <div>
                    <h3 class="text-xl font-bold">
                        <%= auth.name || auth.email() %>
                    </h3>
                    <% if (auth.shortHand) { %>
                        <p class="text-sm badge badge-ghost">@<%= auth.shortHand %>
                        </p>
                        <% } %>
                            <p class="text-base-content/70 text-xs mt-1">User ID: <%= auth.id %>
                            </p>
                </div>
            </div>

            <div class="divider"></div>

            <form method="POST" class="space-y-4">
                <div class="form-control w-full">
                    <label class="label">
                        <span class="label-text">Email</span>
                    </label>
                    <input type="text" value="<%= auth.email() %>" class="input input-bordered w-full" disabled />
                    <label class="label">
                        <span class="label-text-alt text-base-content/60">Email cannot be changed here</span>
                    </label>
                </div>

                <div class="form-control w-full">
                    <label class="label">
                        <span class="label-text">Display Name</span>
                    </label>
                    <input type="text" name="name" value="<%= auth.name || '' %>" placeholder="Enter your display name"
                        class="input input-bordered w-full" />
                </div>

                <div class="form-control w-full">
                    <label class="label">
                        <span class="label-text">Shorthand (@handle)</span>
                    </label>
                    <input type="text" name="shortHand" value="<%= auth.shortHand || '' %>" placeholder="e.g. moviebuff"
                        class="input input-bordered w-full" />
                </div>

                <div class="form-control w-full">
                    <label class="label">
                        <span class="label-text">Bio</span>
                    </label>
                    <textarea name="bio" class="textarea textarea-bordered h-24"
                        placeholder="Tell us about yourself..."><%= auth.bio || '' %></textarea>
                </div>

                <div class="form-control w-full mt-4">
                    <label class="label">
                        <span class="label-text">Created</span>
                    </label>
                    <input type="text" value="<%= (() => {
                            const d = new Date(auth.getString('created'));
                            const months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
                            return `${months[d.getMonth()]} ${d.getDate()} ${d.getFullYear()}`;
                        })() %>" class="input input-bordered w-full" disabled />
                </div>

                <div class="card-actions justify-end mt-6">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>