<script server>
    const { state, code } = params
    let error = null
    try {
        const authData = signInWithOAuth2(state, code)

        // Ensure user is marked as active
        if (authData.record) {
            const user = authData.record
            // check if field exists or just set it? 
            // We'll set it. If the field doesn't exist in schema, this might error or be ignored depending on PB version, 
            // but we assume the user has the schema ready.
            if (!user.getBool('isActive')) {
                user.set('isActive', true)
                $app.save(user)
            }
        }

        redirect('/')
    } catch (e) {
        error = e.message
        console.error('OAuth Redirect Error:', e)
    }
</script>

<% if (error) { %>
    <div class="hero min-h-screen bg-base-200">
        <div class="hero-content text-center">
            <div class="max-w-md">
                <h1 class="text-3xl font-bold text-error">Authentication Failed</h1>
                <p class="py-6">
                    <%= error %>
                </p>
                <a href="/login" class="btn btn-primary">Try Again</a>
            </div>
        </div>
    </div>
    <% } %>